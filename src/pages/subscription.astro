---
import Layout from "../layouts/Layout.astro";
import SelectMenu from "../components/selectmenu.astro";
import Footer from "../components/footer.astro";
import Menublack from "../components/menublack.astro";
import Productslider from "../components/productslider.astro";
import Subscriptioncard from "../components/subscriptioncard.astro";
import SquareCTA from "../components/SquareCTA.astro";
---

<Layout>
  <header>
    <Menublack />
  </header>
  <main>
    <div class="flex">
      <SquareCTA ctaText="Lysristet kaffe" />
      <SquareCTA ctaText="Mellemristet kaffe" />
      <SquareCTA ctaText="Mørkristet kaffe" />
      <SquareCTA ctaText="Bland selv kaffe" />
    </div>
    <Subscriptioncard navn="Lysristet kaffe" beskrivelse="Til dig, der sætter pris på komplekse, frugtige kopprofiler og variation i terroir og forarbejdningsmetode." />
    <Subscriptioncard navn="Mellemristet kaffe" beskrivelse="Til dig, der foretrækker en fyldig og balanceret kop kaffe med sødme, lav syrlighed og varme smagsnoter – perfekt til både filter og espresso." />
    <Subscriptioncard navn="Mørkristet kaffe" beskrivelse="Til dig, der foretrækker en mørkere og mere intens kop kaffe med markante smagsnoter, lav syrlighed og lang eftersmag. Perfekt til espresso eller en kraftigere filterbryg." />
    <Subscriptioncard navn="Bland selv kaffe" beskrivelse="Til dig, der elsker god kaffe og gerne vil overraskes med skiftende udtryk og smagsoplevelser – uden at skulle vælge selv." />
    <div class="selectmenumobile">
      <SelectMenu labelh3="Vælg dit abonnement" placeholder="Vælg dit abonnement" options={["Lysristede bønner", "Mellemristede bønner", "Mørkristede bønner", "Blandede bønner"]} />
    </div>

    <h2 class="margin">Vores bønner</h2>
    <p class="margin">Oplev vores udvalg af selvristede kaffebønner med forskellige smagsnuancer og ristegrader – tilpasset enhver kaffesmag.</p>
    <Productslider />
  </main>
  <footer>
    <Footer />
  </footer>
</Layout>

<style>
  .selectmenumobile {
    display: none;
  }

  main {
    padding-top: 120px;
  }

  @media (max-width: 768px) {
    .selectmenumobile {
      display: block;
    }
    main {
      padding-top: 70px;
    }
    p {
      width: 60%;
    }
  }
  .flex {
    display: flex;
    flex-direction: row;
    gap: 100px; /* Reduced from 10px */
    padding: 5px; /* Reduced from 10px */
    justify-content: center; /* Changed from space-evenly for tighter spacing */
    align-items: center;
  }

  @media (max-width: 768px) {
    .flex {
      gap: 3px; /* Even smaller gap for mobile */
      padding: 3px;
    }
  }
</style>
