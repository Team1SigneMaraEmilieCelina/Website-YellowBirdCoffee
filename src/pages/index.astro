---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/menu.astro";
import Footer from "../components/footer.astro";
---

<Layout>
  <header>
    <Menu />
    <img class="heroimg" src="/img/heroimg.png" alt="Hero Image" />
  </header>
  <main></main>
  <footer>
    <Footer />
  </footer>
</Layout>

<style>
  .heroimg {
    width: 100%;
    object-fit: cover;
    height: 300px;
    position: absolute;
  }

  @media (min-width: 768px) {
    .heroimg {
      height: auto;
    }
  }
</style>
