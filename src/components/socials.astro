---
const { href, alt, src } = Astro.props;
---

<a href={href} target="_blank">
  <img src={src} alt={alt} class="social-icon" />
</a>

<style>
  a img {
    display: inline-block;
    transition: transform 0.2s ease;
    width: 32px;
  }

  a:hover img {
    transform: scale(1.1);
  }

  @media (min-width: 768px) {
    a img {
      width: 45px;
    }
  }
</style>
