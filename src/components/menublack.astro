<style>
  .menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: transparent;
    transition: background-color 0.3s ease;
    padding: 20px 20px 10px 10px;
    box-sizing: border-box;
  }

  .menu.scrolled {
    background-color: var(--background-color);
  }

  /* Burgermenu bliver sort når der scrolles */
  .burger-menu span {
    background-color: var(--black-color);
  }

  /* Rykker kurveikonet til højre med margin fra logoet */
  .logo {
    margin-right: auto;
  }

  .logo img {
    height: 40px;
  }

  .shopping-bag,
  .burger-menu {
    margin-left: 1rem;
    display: flex;
  }

  .shopping-bag img {
    height: 25px;
  }

  .burger-menu {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 20px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1008;
  }

  /* Styling af de tre streger i burger-menuen */
  .burger-menu span {
    height: 2px; /* Hver streg er 2 pixels høj */
    background-color: var(--black-color); /* De er sorte */
    transition: background-color 0.3s ease; /* Baggrundsfarven skifter blødt hvis vi ændrer den */
  }

  /* Når menuen er åben, roterer første streg og flyttes lidt */
  .burger-menu.open span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  /* Når menuen er åben, forsvinder den midterste streg */
  .burger-menu.open span:nth-child(2) {
    opacity: 0;
  }

  /* Når menuen er åben, roterer tredje streg og flyttes i modsat retning */
  .burger-menu.open span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Transitions (blød animation) for første og tredje streg – både åben og lukket tilstand */
  .burger-menu.open span:nth-child(1),
  .burger-menu.open span:nth-child(3),
  .burger-menu span:nth-child(1),
  .burger-menu span:nth-child(3) {
    transition: transform 0.8s ease;
  }

  /* Transition for midterste streg – gælder både når den vises og skjules */
  .burger-menu.open span:nth-child(2),
  .burger-menu span:nth-child(2) {
    transition: opacity 0.8s ease;
  }

  .menu-items {
    position: fixed;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background-color: var(--beige-color);
    display: flex;
    flex-direction: column;
    padding-top: 60px;
    align-items: center;
    transition: transform 0.3s ease;
    z-index: 999;

    /* Starter ude til højre */
    transform: translateX(100%);
  }

  /* Slider ind fra højre side */
  .menu-items.visible {
    transform: translateX(0);
  }

  .menu-items li {
    margin: 0.5rem 0;
    list-style: none;
  }

  .menu-items a {
