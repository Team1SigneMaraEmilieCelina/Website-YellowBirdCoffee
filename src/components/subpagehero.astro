---
const { header, alt, src } = Astro.props;
---

<section class="hero">
  <img class="hero-img" src={src} alt={alt} />
  <h1 class="hero-title">{header}</h1>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
  }
  .hero-img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    top: 0;
    left: 0;
    z-index: 1;
    filter: brightness(0.6);
  }
  .hero-title {
    position: absolute;
    left: 2rem;
    bottom: 2rem;
    z-index: 2;
    color: var(--background-color);
    margin: 0;
  }

  @media (min-width: 768px) {
    .hero {
      height: 500px;
    }
    .hero-title {
      left: 4rem;
      bottom: 4rem;
    }
  }
</style>
